<%= content_tag("article") do %>

	<%= content_tag("header") do %>
		<%= content_tag("p", stories(@event), :class => :stories) %>
		<%= content_tag("h1", @event.name) %>
		<%= content_tag("p", dates(@event, :format => :full), :class => :context) %>
	<% end %>

	<%= content_tag("div", :class => :description) do %>
		<%= simple_format(@event.description) %>
	<% end %>
	
<% end %>