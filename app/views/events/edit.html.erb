<%= content_tag("h1", "Edit '" + @event.name + "'") %>

<%= form_for @event, :method => :put do |f| %>
	
	<%= content_tag("div") do %>
		
		<%= content_tag("div") do %>
			<%= f.label :name%>
			<%= f.text_field :name %>
		<% end %>

		<%= content_tag("div") do %>		
			<%= f.label :start %>
			<%= f.date_select :start %>
		<% end %>

		<%= content_tag("div") do %>		
			<%= f.label :end %>
			<%= f.date_select :end %>
		<% end %>
				
	<% end %>

	<%= f.submit "Add" %>
	
<% end %>